{
  "env": {
    "node": true,
    "es2022": true
  },
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "no-param-reassign": "off",
    "no-shadow": "off",
    "camelcase": "off",
    "no-nested-ternary": "off",
    "prettier/prettier": "error",
    "@typescript-eslint/camelcase": "off"
  }
}
